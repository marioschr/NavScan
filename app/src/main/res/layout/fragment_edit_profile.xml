<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/arizona_greenblue"
    tools:context=".EditProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            style="@style/TextView34Style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_bottom_corners"
            android:gravity="center_horizontal"
            android:paddingTop="25dp"
            android:paddingBottom="15dp"
            android:text="@string/title_edit_profile" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabEditProfilePicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="-15dp"
                android:clickable="true"
                android:src="@drawable/ic_baseline_edit_24"
                app:backgroundTint="@color/teal_700"
                app:layout_constraintEnd_toEndOf="@+id/imgEditProfile"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgEditProfile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/default_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            app:cardCornerRadius="25dp"
            app:contentPadding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextView20Style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/full_name" />

                        <TextView
                            android:id="@+id/tvEditName"
                            style="@style/TextView16Style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            tools:text="@string/full_name" />

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnEditName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:backgroundTint="@color/arizona_greenblue"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="15dp"
                        android:src="@drawable/ic_baseline_edit_24" />

                </LinearLayout>

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="2dp"
                    android:background="@drawable/divider_horizontal"
                    android:backgroundTint="@color/branch_brown" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextView20Style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/birthday" />

                        <TextView
                            android:id="@+id/tvEditBirthday"
                            style="@style/TextView16Style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            tools:text="@string/birthday" />

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnEditBirthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:backgroundTint="@color/arizona_greenblue"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="15dp"
                        android:src="@drawable/ic_baseline_edit_24" />

                </LinearLayout>

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="2dp"
                    android:background="@drawable/divider_horizontal"
                    android:backgroundTint="@color/branch_brown" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextView20Style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/password" />

                        <TextView
                            style="@style/TextView16Style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/change_your_current_password" />

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnEditPass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:backgroundTint="@color/arizona_greenblue"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="15dp"
                        android:src="@drawable/ic_baseline_edit_24" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>