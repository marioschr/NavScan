<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@color/branch_brown</item>
    </style>

    <style name="TextView16Style" parent="TextViewStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView20Style" parent="TextViewStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextView24Style" parent="TextViewStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextView28Style" parent="TextViewStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextView34Style" parent="TextViewStyle">
        <item name="android:textSize">28sp</item>
    </style>
    <style name="TextView42Style" parent="TextViewStyle">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="StoreButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/button_store_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>